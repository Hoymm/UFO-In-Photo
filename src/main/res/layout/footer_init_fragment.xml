<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageButton
        android:id="@+id/rotate_left_button_id"
        android:src="@drawable/rotate_left"
        style="@style/ImageButtonStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:id="@+id/rotate_right_button_id"
        style="@style/ImageButtonStyle"
        android:src="@drawable/rotate_right"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/rotate_left_button_id"
        app:layout_constraintLeft_toRightOf="@+id/rotate_left_button_id"
        app:layout_constraintTop_toTopOf="@+id/rotate_left_button_id"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/accept_button_id"
        style="@style/ImageButtonStyle"
        android:src="@drawable/ok"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/rotate_right_button_id"
        app:layout_constraintLeft_toRightOf="@+id/rotate_right_button_id"
        app:layout_constraintTop_toTopOf="@+id/rotate_right_button_id"
        app:layout_constraintVertical_bias="0.0" />
</LinearLayout>