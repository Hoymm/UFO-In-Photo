<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/list_element_background_selector"
    android:clickable="true"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="#"
        android:ems="2"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:id="@+id/element_text_id"
        app:layout_constraintRight_toLeftOf="@+id/item_elements_list_iv_id"
        app:layout_constraintBottom_toTopOf="@+id/separateLine"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="0dp" />

    <ImageView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:scaleType="fitCenter"
        android:background="@color/appThemeColor"
        android:id="@+id/item_elements_list_iv_id"
        android:contentDescription="@string/ufo_icon_to_choose"
        android:padding="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/element_text_id"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/separateLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/elementsListSeparateLineColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintVertical_bias="0.444" />
</android.support.constraint.ConstraintLayout>
